<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/constBlack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="-250dp"
        android:layout_marginTop="-250dp"
        android:layout_marginRight="-250dp"
        android:layout_marginBottom="-250dp"
        android:alpha="0.75"
        android:contentDescription="@string/login_app_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:alpha="0.2"
        android:background="@drawable/gradient_overlay_black_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <ScrollView
        android:layout_marginVertical="@dimen/LPL"
        android:background="@color/invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <LinearLayout
            android:paddingHorizontal="@dimen/LPM"
            android:paddingVertical="@dimen/LPM"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginBottom="@dimen/LPM"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/constWhite"
                    android:alpha="0.25"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textSize="11sp"
                    android:text="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/constWhite"
                    android:layout_marginHorizontal="@dimen/LPM"
                    android:layout_marginTop="@dimen/LPEL"
                    android:lineSpacingExtra="@dimen/LPSS"
                    android:fontFamily="@font/open_sans_bold"
                    android:textSize="34sp"
                    android:text="@string/app_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:alpha="0.75"
                    android:layout_marginTop="@dimen/LPM"
                    android:layout_marginHorizontal="@dimen/LPM"
                    android:textColor="@color/constWhite"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textSize="11sp"
                    android:text="@string/on_boarding_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:paddingHorizontal="@dimen/LPS"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/LPSS"
                app:cardBackgroundColor="@color/white900"
                android:layout_marginVertical="@dimen/LPS"
                android:layout_width="match_parent"
                android:background="@color/white900"
                android:layout_height="44dp">
                <LinearLayout
                    android:layout_marginHorizontal="@dimen/LPM"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:textColorHint="@color/black800"
                        android:hint="@string/login_username_placeholder"
                        android:textSize="12sp"
                        android:fontFamily="@font/open_sans_light"
                        android:textColor="@color/black900"
                        android:background="@color/white900"
                        android:id="@+id/usernameInput"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autofillHints="Username"
                        android:inputType="text"
                        tools:ignore="LabelFor" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/buttonContinue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:alpha="0.1"
            android:layout_gravity="center"
            android:textColor="@color/constWhite"
            android:layout_marginBottom="@dimen/LPS"
            android:layout_marginHorizontal="@dimen/LPM"
            android:textAlignment="center"
            android:text="Trademark : Build from love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/buttonContinueGesture"
            android:layout_marginHorizontal="@dimen/LPM"
            android:layout_marginBottom="@dimen/LPL"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/constBlack"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <LinearLayout
                android:background="@drawable/color_gradient_instagram_like"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:background="@color/invisible"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textSize="18sp"
                    android:textColor="@color/constWhite"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="@string/LOGIN_APP"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:background="@color/invisible"
                    android:layout_marginStart="@dimen/LPM"
                    android:fontFamily="@font/fasb"
                    android:textSize="14sp"
                    android:textColor="@color/constWhite"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="@string/icon_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:id="@+id/infoPhoto"
        android:textSize="24sp"
        android:textColor="@color/constWhite"
        android:text="@string/icon_info"
        android:fontFamily="@font/fasb"
        android:layout_marginTop="@dimen/LPEL"
        android:layout_marginEnd="@dimen/LPL"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>