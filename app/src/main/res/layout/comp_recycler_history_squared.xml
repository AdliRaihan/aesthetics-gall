<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:visibility="gone"
        android:id="@+id/separator"
        app:layout_constraintTop_toTopOf="@id/cardContainer"
        app:layout_constraintBottom_toBottomOf="@id/cardContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cardContainer"
        android:layout_width="@dimen/LPM"
        android:layout_height="0dp"/>
    <androidx.cardview.widget.CardView
        android:layout_marginEnd="@dimen/LPS"
        android:id="@+id/cardContainer"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/separator"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="150dp"
        android:layout_height="190dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/pureBlack500"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.github.mikephil.charting.charts.LineChart
                android:alpha="0.25"
                android:id="@+id/cardChartSimple"
                android:layout_width="197dp"
                android:layout_height="77dp"
                android:layout_marginBottom="-8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
            <TextView
                android:padding="@dimen/LPM"
                android:fontFamily="@font/open_sans_extra_bold"
                android:textColor="@color/constWhite"
                app:layout_constraintVertical_bias="0"
                android:textSize="16sp"
                android:id="@+id/transactionType"
                android:text="0"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="@dimen/LPM"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/constWhite"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/transactionTotal"
                    android:textSize="14sp"
                    android:id="@+id/transactionCategories"
                    android:text="Categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginEnd="@dimen/LPSS"
                    android:textColor="@color/constWhite"
                    android:textSize="11sp"
                    android:id="@+id/transactionStatus"
                    app:layout_constraintHorizontal_bias="0"
                    android:text="@string/icon_dollar_sign"
                    android:fontFamily="@font/fasb"
                    app:layout_constraintTop_toTopOf="@id/transactionTotal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/transactionTotal"
                    app:layout_constraintBottom_toBottomOf="@id/transactionTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:maxLines="1"
                    android:textColor="@color/constWhite"
                    app:layout_constraintHorizontal_bias="0"
                    android:textSize="18sp"
                    android:id="@+id/transactionTotal"
                    android:text="9.999.999k"
                    android:fontFamily="@font/open_sans_extra_bold"
                    app:layout_constraintLeft_toRightOf="@id/transactionStatus"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>