<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    This is profile container -->

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/LPSS"
        android:layout_margin="@dimen/LPS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="174dp">
            <ImageView
                android:id="@+id/unsplashBannerSmall"
                android:layout_width="match_parent"
                android:layout_height="326dp"
                android:contentDescription="@string/icon_heart"
                android:scaleX="1"
                android:scaleY="1"
                android:src="@mipmap/ic_header"
                app:flow_verticalAlign="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <View
                android:background="@color/constBlack"
                android:alpha="0.5"
                android:layout_width="match_parent"
                android:layout_height="326dp"
                app:flow_verticalAlign="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:textColor="@color/black900"
                android:padding="@dimen/LPM"
                android:layout_marginEnd="@dimen/LPS"
                android:textAlignment="gravity"
                android:gravity="center"
                android:text="@string/icon_info"
                android:fontFamily="@font/fasb"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:padding="@dimen/LPM"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black900"
                    android:textSize="12sp"
                    android:fontFamily="@font/open_sans_light"
                    android:text="@string/look_whats_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/black900"
                    android:textSize="28sp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/browse_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginEnd="@dimen/LPL"
                android:layout_marginBottom="@dimen/LPL"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black900"
                    android:fontFamily="@font/fasb"
                    android:text="envelope"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/userContainerCred"
                android:padding="@dimen/LPM"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/userInfoContainer"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/userGotoProfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/mock_name"
                        android:fontFamily="@font/open_sans_bold"
                        android:textSize="24sp"
                        android:textColor="@color/black900"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/mock_job"
                        android:fontFamily="@font/open_sans_light"
                        android:textSize="12sp"
                        android:textColor="@color/black900"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/userGotoProfile"
                    app:layout_constraintLeft_toRightOf="@id/userInfoContainer"
                    android:paddingHorizontal="@dimen/LPM"
                    android:gravity="center_vertical"
                    android:textAlignment="gravity"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/icon_profile"
                    android:fontFamily="@font/fasr"
                    android:textColor="@color/black900"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="12sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/homeGameScrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_marginTop="@dimen/LPM"
                android:id="@+id/userPlayerMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:visibility="gone"
                android:layout_marginTop="@dimen/LPM"
                android:id="@+id/userPlayerWallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:visibility="gone"
                android:layout_marginTop="@dimen/LPM"
                android:id="@+id/userPlayerOwnedProperty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>