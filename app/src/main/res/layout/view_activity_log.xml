<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="@dimen/LPM"
        android:layout_marginStart="@dimen/LPM"
        android:id="@+id/actionInformation"
        app:layout_constraintRight_toLeftOf="@id/gotoAction"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/separator"
        app:layout_constraintVertical_bias="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/mock_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="12sp"
            android:text="@string/mock_total_spent_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginEnd="@dimen/LPM"
        android:id="@+id/gotoAction"
        app:layout_constraintTop_toTopOf="@id/actionInformation"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/actionInformation"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="22sp"
            android:textColor="@color/red"
            android:fontFamily="@font/fasb"
            android:text="@string/icon_trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:background="@color/white800"
        android:layout_marginHorizontal="@dimen/LPL"
        android:layout_marginTop="@dimen/LPM"
        app:layout_constraintTop_toBottomOf="@id/actionInformation"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>