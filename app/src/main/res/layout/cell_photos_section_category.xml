<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerReal"
        android:paddingVertical="@dimen/LPM"
        android:paddingHorizontal="@dimen/LPS"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="80dp"
            app:cardElevation="0dp"
            android:background="@color/invisible"
            app:cardBackgroundColor="@color/invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:id="@+id/separatorLeft"
                    android:layout_width="@dimen/LPM"
                    android:layout_height="1dp"/>
                <TextView
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/LPS"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:fontFamily="@font/fasb"
                    android:id="@+id/catSymbol"
                    android:text="filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:id="@+id/catName"
                    android:text="@string/mock_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:visibility="gone"
        android:background="@color/whiteToB500"
        app:layout_constraintLeft_toLeftOf="@id/containerReal"
        app:layout_constraintRight_toRightOf="@id/containerReal"
        app:layout_constraintBottom_toBottomOf="@id/containerReal"
        android:layout_width="0dp"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>