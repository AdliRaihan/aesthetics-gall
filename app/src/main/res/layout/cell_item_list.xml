<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/LPM"
        android:layout_marginVertical="@dimen/LPS"
        android:layout_marginHorizontal="@dimen/LPM"
        android:background="@drawable/background_gradient_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="top"
            android:id="@+id/infoJobView"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/priceContainer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/applyView"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginEnd="@dimen/LPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_wallet"
                    android:layout_width="44dp"
                    android:layout_height="44dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/itemName"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textSize="18sp"
                    android:text="@string/mock_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/itemDescription"
                    android:textSize="14sp"
                    android:text="@string/mock_item"
                    android:textColor="@color/black700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            app:layout_constraintVertical_bias="0"
            android:layout_marginStart="@dimen/LPM"
            android:id="@+id/applyView"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/infoJobView"
            app:layout_constraintBottom_toBottomOf="@id/infoJobView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/infoJobView"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:text="@string/icon_cart"
                android:fontFamily="@font/fasb"
                android:textColor="@color/black800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/blueGray500"
                android:layout_marginTop="@dimen/LPS"
                android:text="@string/item_cell_buy_item"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/priceContainer"
            app:layout_constraintTop_toBottomOf="@id/infoJobView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/LPM"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/blueGray500"
                android:fontFamily="@font/fasb"
                android:text="@string/icon_dollar_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/itemPrice"
                android:textSize="24sp"
                android:textColor="@color/blueGray500"
                android:layout_marginStart="@dimen/LPSS"
                android:text="@string/mock_item_price"
                android:fontFamily="@font/open_sans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>