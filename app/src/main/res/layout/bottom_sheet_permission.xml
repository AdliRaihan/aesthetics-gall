<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/LPM"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/aboutThisPhotoContainer"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="24sp"
                android:textColor="@color/redLight"
                android:text="warning"
                android:fontFamily="@font/fasb"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginStart="@dimen/LPS"
                android:textSize="16sp"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/permission_general"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            app:layout_constraintHorizontal_bias="0"
            android:id="@+id/descAboutThisPhoto"
            android:layout_marginTop="@dimen/LPS"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aboutThisPhotoContainer"
            android:text="@string/permission_general_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/listsButton"
            app:layout_constraintTop_toBottomOf="@id/descAboutThisPhoto"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/allowPermissionButton"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/invisible"
                android:layout_marginTop="@dimen/LPM"
                app:layout_constraintTop_toBottomOf="@id/username"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/profileButtonDesc"
                    android:textColor="@color/constWhite"
                    android:fontFamily="@font/open_sans_semibold"
                    android:background="@drawable/background_gradient_testing"
                    android:padding="@dimen/LPM"
                    android:text="@string/permission_allowed"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/ignoreButton"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@color/invisible"
                app:layout_constraintTop_toBottomOf="@id/username"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ignoreButtonDesc"
                    android:textColor="@color/redLight"
                    android:fontFamily="@font/open_sans_semibold"
                    android:paddingVertical="@dimen/LPM"
                    android:paddingHorizontal="@dimen/LPM"
                    android:text="@string/permission_ignore"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/LPM"
            app:layout_constraintTop_toBottomOf="@id/listsButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/black700"
            android:fontFamily="@font/open_sans_light"
            android:text="@string/permission_footer"
            android:textAlignment="center"
            android:textSize="11sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>