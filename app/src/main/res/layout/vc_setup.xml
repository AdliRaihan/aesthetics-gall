<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_marginStart="@dimen/LP2"
        android:layout_marginTop="@dimen/LPM"
        android:id="@+id/backButton"
        android:padding="@dimen/LPM"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:textColor="@color/black900"
        android:text="@string/icon_arrow_left"
        android:fontFamily="@font/fasb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginHorizontal="@dimen/LPEM"
        android:layout_marginTop="@dimen/LPEL"
        android:id="@+id/tempTextHeader"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tempTextBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/open_sans_bold"
            android:textSize="28sp"
            android:text="Glad you're here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Let's start with your username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:paddingVertical="@dimen/LPM"
        android:paddingHorizontal="@dimen/LPEM"
        android:id="@+id/tempTextBox"
        app:layout_constraintTop_toBottomOf="@id/tempTextHeader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/tempCardBox"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/pureWhite900"
            android:background="@color/white800"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <LinearLayout
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/LPM"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/black900"
                    android:text="@string/icon_user"
                    android:fontFamily="@font/fasb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/usernameField"
                    android:inputType="text"
                    android:maxLength="24"
                    android:maxLines="1"
                    android:textColorHint="@color/black900"
                    android:textColor="@color/black900"
                    android:layout_marginStart="@dimen/LPM"
                    android:background="@color/invisible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:height="0dp"
            android:id="@+id/textError"
            android:textSize="12sp"
            android:textColor="@color/redLight"
            android:layout_marginTop="@dimen/LPS"
            android:fontFamily="@font/open_sans_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btnNext"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/LPM"
        android:layout_marginEnd="@dimen/LPEM"
        app:layout_constraintTop_toBottomOf="@id/tempTextBox"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="54dp"
        android:layout_height="54dp">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            app:cardCornerRadius="240dp"
            app:cardBackgroundColor="@color/constBlack900"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center"
                android:textSize="24sp"
                android:textColor="@color/constWhite"
                android:text="@string/icon_arrow_right"
                android:fontFamily="@font/fasb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/legalAgreement"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12sp"
            android:textColor="@color/black700"
            android:textAlignment="center"
            android:paddingHorizontal="@dimen/LPEL"
           android:text="This require internet connection to continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/link"
            android:layout_marginBottom="@dimen/LPEM"
            android:textAlignment="center"
            android:paddingHorizontal="@dimen/LPEL"
            android:text="Learn more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>