<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_marginTop="@dimen/LPM"
        android:paddingHorizontal="@dimen/LPEM"
        android:text="2023"
        android:fontFamily="@font/open_sans_extra_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="32sp"
        android:id="@+id/year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginBottom="@dimen/LPM"
        android:paddingHorizontal="@dimen/LPEM"
        android:text="January"
        android:textSize="18sp"
        android:fontFamily="@font/open_sans_light"
        app:layout_constraintTop_toBottomOf="@id/year"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <GridView
        android:id="@+id/gridDays"
        app:layout_constraintTop_toBottomOf="@id/month"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <GridView
        android:layout_marginHorizontal="@dimen/LPS"
        android:numColumns="7"
        android:id="@+id/gridView"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/gridDays"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>