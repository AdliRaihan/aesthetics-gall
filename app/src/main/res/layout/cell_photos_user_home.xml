<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginVertical="@dimen/LPS"
        android:layout_marginHorizontal="@dimen/LPSM"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/LPM"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/followIconContainer"
                app:layout_constraintBottom_toTopOf="@id/imageHolderContainer"
                android:id="@+id/userInfoContainer"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@color/blueWhite"
                    app:cardCornerRadius="17dp"
                    app:cardElevation="0dp"
                    android:layout_width="34dp"
                    android:layout_height="34dp">
                    <ImageView
                        android:id="@+id/userProfileImageHolder"
                        android:src="@mipmap/ic_wallet"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/icon_heart" />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/open_sans_bold"
                        android:layout_marginStart="@dimen/LPS"
                        android:id="@+id/usernameLabel"
                        android:text="@string/mock_name"
                        android:textColor="@color/blueGray500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:maxLines="2"
                        android:fontFamily="@font/open_sans_light"
                        android:layout_marginStart="@dimen/LPS"
                        android:id="@+id/descriptionLabel"
                        android:text="@string/mock_name"
                        android:textColor="@color/black700"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:alpha="0.35"
                android:background="@color/black700"
                android:layout_marginEnd="@dimen/LPS"
                app:layout_constraintRight_toLeftOf="@id/followIconContainer"
                app:layout_constraintTop_toTopOf="@id/followIconContainer"
                app:layout_constraintBottom_toBottomOf="@id/followIconContainer"
                android:layout_width="1dp"
                android:layout_height="0dp"/>
            <LinearLayout
                android:layout_marginStart="@dimen/LPL"
                android:gravity="center"
                android:paddingVertical="@dimen/LPS"
                android:paddingHorizontal="@dimen/LPM"
                android:id="@+id/followIconContainer"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/userInfoContainer"
                app:layout_constraintBottom_toBottomOf="@id/userInfoContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/black900"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/cell_photo_hire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/imageHolderContainer"
                app:layout_constraintTop_toBottomOf="@id/userInfoContainer"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                app:layout_constraintHeight_max="375dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@color/blueWhite"
                    app:cardCornerRadius="@dimen/LPS"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="0dp"
                    app:layout_constraintHeight_max="375dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="center"
                        android:id="@+id/imageHolder"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/icon_heart" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_margin="@dimen/LPS"
                    android:padding="@dimen/LPS"
                    android:background="@drawable/background_gradient_black"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginEnd="@dimen/LPM"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/blueGray500"
                            android:text="@string/icon_heart"
                            android:fontFamily="@font/fasr"
                            android:textSize="@dimen/cell_photos_ic_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:visibility="gone"
                            android:textColor="@color/black700"
                            android:textSize="11sp"
                            android:fontFamily="@font/open_sans_light"
                            android:id="@+id/sumLikes"
                            android:maxLines="5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_marginEnd="@dimen/LPM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textColor="@color/blueGray500"
                            android:text="@string/icon_comment"
                            android:fontFamily="@font/fasr"
                            android:textSize="@dimen/cell_photos_ic_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textColor="@color/blueGray500"
                            android:text="@string/icon_slash"
                            android:fontFamily="@font/fasb"
                            android:textSize="@dimen/cell_photos_ic_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:textColor="@color/blueGray500"
                        android:text="@string/icon_bookmark"
                        android:fontFamily="@font/fasr"
                        android:textSize="@dimen/cell_photos_ic_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.cardview.widget.CardView
                android:visibility="gone"
                app:cardElevation="0dp"
                android:layout_marginTop="@dimen/LPS"
                app:layout_constraintTop_toBottomOf="@id/imageHolderContainer"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/photosInfoContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/LPM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textAlignment="gravity"
                        android:lineSpacingExtra="@dimen/LPSS"
                        android:textSize="12sp"
                        android:id="@+id/photosCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="@dimen/LPS"
                        android:lineSpacingExtra="@dimen/LPSS"
                        android:textSize="11sp"
                        android:id="@+id/photosCaptionDate"
                        android:textColor="@color/blueGray500"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>