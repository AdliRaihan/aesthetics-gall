<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/LPS"
    android:layout_marginHorizontal="@dimen/LPS"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/separatorTop"
        app:layout_constraintTop_toTopOf="@id/photoContainer"
        app:layout_constraintLeft_toLeftOf="@id/photoContainer"
        app:layout_constraintBottom_toBottomOf="@id/photoContainer"
        app:layout_constraintRight_toRightOf="@id/photoContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/LPM"
        android:orientation="horizontal" />
    <LinearLayout
        android:background="@drawable/b_g_rounded_black"
        android:orientation="vertical"
        android:id="@+id/photoContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/imageHolderContainer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                app:layout_constraintHeight_max="375dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@color/blueWhite"
                    app:cardCornerRadius="@dimen/LPM"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="0dp"
                    app:layout_constraintHeight_max="375dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/icon_heart"
                        android:scaleType="center"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:src="@mipmap/ic_thief" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/downloadButton"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/LPS"
                    android:layout_margin="@dimen/LPSM"
                    app:cardBackgroundColor="@color/white"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black900"
                        android:padding="@dimen/LPM"
                        android:textSize="18sp"
                        android:fontFamily="@font/fasb"
                        android:text="@string/icon_download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/containerUserInformation"
            android:layout_marginStart="@dimen/LPSM"
            android:layout_marginEnd="@dimen/LPM"
            android:layout_marginTop="@dimen/LPSS"
            android:layout_marginBottom="@dimen/LPS"
            android:alpha="0.75"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/LPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="0.99"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/userInfoContainer"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@color/blueWhite"
                    app:cardCornerRadius="17dp"
                    app:cardElevation="0dp"
                    android:layout_width="34dp"
                    android:layout_height="34dp">
                    <ImageView
                        android:id="@+id/userProfileImageHolder"
                        android:src="@mipmap/ic_wallet"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/icon_heart" />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_marginStart="@dimen/LPS"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/open_sans_bold"
                        android:id="@+id/usernameLabel"
                        android:text="@string/mock_name"
                        android:textColor="@color/black900"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:maxLines="1"
                        android:fontFamily="@font/open_sans_light"
                        android:id="@+id/descriptionLabel"
                        android:text="@string/cell_photo_hire"
                        android:textColor="@color/black900"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.3"
                android:gravity="center_vertical|end"
                android:foregroundGravity="right"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/redLight"
                    android:shadowColor="@color/redLight"
                    android:shadowRadius="6"
                    android:textSize="14sp"
                    android:fontFamily="@font/fasr"
                    android:text="@string/icon_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginBottom="0.5dp"
                    android:textSize="12sp"
                    android:id="@+id/sumLikes"
                    android:layout_marginStart="@dimen/LPS"
                    android:text="@string/mock_number_simplified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>