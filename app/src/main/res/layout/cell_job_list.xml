<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:padding="@dimen/LPM"
        android:background="@drawable/background_gradient_white"
        android:layout_marginVertical="@dimen/LPS"
        android:id="@+id/infoJobView"
        android:layout_marginHorizontal="@dimen/LPM"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/separator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/headerLeftContent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/headerRightContent"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/jobPositionLabel"
                    android:fontFamily="@font/open_sans_bold"
                    android:textSize="24sp"
                    android:text="@string/mock_job_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/black700"
                    android:id="@+id/jobPositionLevelLabel"
                    android:textSize="14sp"
                    android:text="@string/mock_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/LPSS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black700"
                        android:fontFamily="@font/fasb"
                        android:text="@string/icon_dollar_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/jobSalaryLabel"
                        android:textColor="@color/black800"
                        android:layout_marginStart="@dimen/LPSS"
                        android:text="@string/mock_yearly"
                        android:fontFamily="@font/open_sans_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/headerRightContent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintLeft_toRightOf="@id/headerLeftContent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/open_sans_bold"
                    android:paddingVertical="@dimen/LPS"
                    android:paddingHorizontal="@dimen/LPM"
                    android:text="@string/job_cell_apply"
                    android:textColor="@color/blueGray500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="@dimen/LPM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                app:layout_constraintVertical_bias="0"
                android:id="@+id/qualificationsContainer"
                android:layout_marginEnd="@dimen/LPS"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/skillContainer"
                android:orientation="vertical"
                android:paddingVertical="@dimen/LPSS"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/job_cell_qualify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="@dimen/LPSS"
                    android:id="@+id/jobRequirementLabel"
                    android:textSize="14sp"
                    android:text="@string/mock_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                app:layout_constraintVertical_bias="0"
                android:gravity="end"
                android:id="@+id/skillContainer"
                android:layout_marginStart="@dimen/LPS"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/qualificationsContainer"
                android:orientation="vertical"
                android:paddingVertical="@dimen/LPSS"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/open_sans_semibold"
                    android:textSize="16sp"
                    android:text="@string/job_cell_skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAlignment="textEnd"
                    android:layout_marginTop="@dimen/LPSS"
                    android:id="@+id/jobSkillRequirementLabel"
                    android:textSize="14sp"
                    android:text="@string/mock_related"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <View
        android:visibility="gone"
        android:id="@id/separator"
        android:layout_marginTop="@dimen/LPM"
        app:layout_constraintTop_toBottomOf="@id/infoJobView"
        android:layout_marginHorizontal="@dimen/LPL"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/separatorColor"
        android:layout_width="0dp"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>