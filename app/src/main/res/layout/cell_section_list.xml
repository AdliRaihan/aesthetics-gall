<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginVertical="@dimen/LPS"
        android:background="@drawable/background_gradient_white"
        android:padding="@dimen/LPM"
        android:layout_marginHorizontal="@dimen/LPM"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="top"
            android:id="@+id/infoJobView"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/applyView"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginEnd="@dimen/LPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_ticket"
                    android:layout_width="44dp"
                    android:layout_height="44dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/placeNameLabel"
                    android:textSize="16sp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/mock_job_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/placeDescriptionLabel"
                        android:textColor="@color/blueGray500"
                        android:text="@string/mock_section_description"
                        android:fontFamily="@font/open_sans"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="@dimen/LPS"
                    android:id="@+id/additionalInfoContainer"
                    app:layout_constraintTop_toBottomOf="@id/infoJobView"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/separator"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="16sp"
                            android:text="@string/icon_location_player"
                            android:fontFamily="@font/fasb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/placeDistanceLabel"
                            android:layout_marginStart="@dimen/LPS"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:text="@string/mock_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/applyView"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/infoJobView"
            app:layout_constraintBottom_toBottomOf="@id/infoJobView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/infoJobView"
            android:layout_marginEnd="@dimen/LPS"
            android:layout_marginStart="@dimen/LPM"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/placeVisitLabel"
                android:textSize="24sp"
                android:text="@string/icon_arrow_right"
                android:fontFamily="@font/fasb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:visibility="gone"
            android:id="@+id/separator"
            android:layout_marginTop="@dimen/LPM"
            android:layout_marginHorizontal="@dimen/LPL"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/separatorColor"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>