<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintTopNavigation"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_width="0dp"
    android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="@dimen/LP2"
            android:layout_marginTop="@dimen/LPM"
            android:id="@+id/backButton"
            android:padding="@dimen/LPM"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textColor="@color/black900"
            android:text="@string/icon_arrow_left"
            android:fontFamily="@font/fasb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/userContainerInfo"
            app:layout_constraintTop_toTopOf="@id/backButton"
            app:layout_constraintLeft_toRightOf="@id/backButton"
            app:layout_constraintRight_toLeftOf="@id/followButton"
            app:layout_constraintBottom_toBottomOf="@id/backButton"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/open_sans_extra_bold"
                android:text="@string/mock_name"
                android:id="@+id/appUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Unregistered User"
                android:textSize="12sp"
                android:textColor="@color/black700"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:textAlignment="gravity"
            android:layout_marginEnd="@dimen/LP2"
            android:layout_marginTop="@dimen/LPM"
            android:id="@+id/followButton"
            android:padding="@dimen/LPM"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_gravity="end"
            android:gravity="end"
            android:textSize="24sp"
            android:text="@string/elipsis_v"
            android:fontFamily="@font/fasb"
            android:layout_width="54dp"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:id="@+id/scrollView"
        app:layout_constraintTop_toBottomOf="@id/constraintTopNavigation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginHorizontal="@dimen/LPSM"
                android:id="@+id/containerInfo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/invisible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:paddingTop="@dimen/LPM"
                        android:paddingHorizontal="@dimen/LPM"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <androidx.cardview.widget.CardView
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:cardBackgroundColor="@color/blueWhite"
                                app:cardCornerRadius="@dimen/LPEL"
                                app:cardElevation="0dp"
                                android:layout_width="84dp"
                                android:layout_height="84dp">
                                <ImageView
                                    android:layout_margin="-80dp"
                                    android:id="@+id/imageHolder"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:contentDescription="@string/icon_heart"
                                    android:scaleType="fitCenter"
                                    android:src="@mipmap/ic_thief" />
                            </androidx.cardview.widget.CardView>
                            <LinearLayout
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:paddingHorizontal="@dimen/LPM"
                                    android:paddingVertical="@dimen/LPS"
                                    android:text="Message"
                                    android:fontFamily="@font/open_sans_semibold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <androidx.cardview.widget.CardView
                                    app:cardElevation="0dp"
                                    app:cardCornerRadius="90dp"
                                    android:layout_marginStart="@dimen/LPM"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:paddingHorizontal="@dimen/LPM"
                                        android:paddingVertical="@dimen/LPS"
                                        android:background="@drawable/color_gradient_instagram_like"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:id="@+id/isFollowingMark"
                                            android:layout_marginEnd="@dimen/LPS"
                                            android:gravity="center"
                                            android:textColor="@color/constWhite"
                                            android:text="@string/icon_plus"
                                            android:fontFamily="@font/fasb"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                        <TextView
                                            android:gravity="center"
                                            android:textColor="@color/constWhite"
                                            android:text="Follow"
                                            android:fontFamily="@font/open_sans"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/LPS"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginTop="@dimen/LPS"
                                android:fontFamily="@font/open_sans_extra_bold"
                                android:textSize="28sp"
                                android:text="@string/mock_name"
                                android:id="@+id/profileUsername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginTop="@dimen/LPSS"
                                android:fontFamily="@font/open_sans_light"
                                android:textSize="14sp"
                                android:textColor="@color/black800"
                                android:text="@string/mock_job"
                                android:id="@+id/profileBio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_marginTop="@dimen/LPM"
                    android:gravity="center"
                    android:layout_marginHorizontal="@dimen/LPM"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/totalLikes"
                            android:textSize="21sp"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="@string/mock_number_simplified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="@color/black800"
                            android:text="@string/liked_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:alpha="0.1"
                        android:layout_marginHorizontal="@dimen/LPL"
                        android:background="@drawable/color_gradient_instagram_like"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/totalFollowers"
                            android:textSize="21sp"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="@string/mock_number_simplified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="@color/black800"
                            android:text="@string/follower_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:alpha="0.1"
                        android:layout_marginHorizontal="@dimen/LPL"
                        android:background="@drawable/color_gradient_instagram_like"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/totalFollowing"
                            android:textSize="21sp"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="@string/mock_number_simplified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="@color/black800"
                            android:text="@string/following_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/LPM"
                android:orientation="vertical"
                android:background="@color/whiteToB500"
                android:id="@+id/containerImageDocker"
                app:layout_constraintTop_toBottomOf="@id/containerInfo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:gravity="center_horizontal"
                    android:id="@+id/grabTicker"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/imageDocker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textPhoto"
                        android:padding="@dimen/LPM"
                        android:fontFamily="@font/open_sans_semibold"
                        android:layout_marginHorizontal="@dimen/LPM"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Photos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_marginBottom="@dimen/LPS"
                        android:background="@drawable/color_gradient_instagram_like"
                        app:layout_constraintBottom_toBottomOf="@id/textPhoto"
                        app:layout_constraintLeft_toLeftOf="@id/textPhoto"
                        app:layout_constraintRight_toRightOf="@id/textPhoto"
                        android:layout_width="0dp"
                        android:layout_height="3dp"/>
                    <TextView
                        android:alpha="0.5"
                        android:id="@+id/textCollection"
                        android:padding="@dimen/LPM"
                        android:fontFamily="@font/open_sans_semibold"
                        android:layout_marginHorizontal="@dimen/LPM"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/textPhoto"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Collection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <GridView
                    android:layout_marginRight="@dimen/LPSS"
                    android:scrollbars="none"
                    android:background="@color/whiteToB500"
                    android:id="@+id/imageDocker"
                    android:numColumns="3"
                    app:layout_constraintTop_toBottomOf="@id/containerImageDocker"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/whiteToB500"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:id="@+id/navigationGrabTicker"
        app:layout_constraintTop_toBottomOf="@id/constraintTopNavigation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textPhotoAlt"
            android:padding="@dimen/LPM"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginHorizontal="@dimen/LPM"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:alpha="0.5"
            android:id="@+id/textCollectionAlt"
            android:padding="@dimen/LPM"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginHorizontal="@dimen/LPM"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/textPhotoAlt"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:text="Position User"
        android:fontFamily="@font/open_sans_extra_bold"
        android:layout_margin="@dimen/LPM"
        android:padding="@dimen/LPM"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="24sp"
        android:id="@+id/debugPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>