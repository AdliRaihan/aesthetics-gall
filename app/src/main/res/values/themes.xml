<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LPSimulation" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>

        <!-- Color for background status bar -->
        <item name="colorPrimaryVariant">@color/white</item>

        <!-- This is bottom background thing -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>

        <!-- Default Background Color -->
<!--        <item name="android:background">@color/white</item>-->

        <!-- Default Text Color -->
        <item name="android:textColor">@color/seaBlueColorTop</item>
<!--        <item name="android:textColorSecondary">@color/black800</item>-->

        <!-- Default Text Font -->
        <item name="android:fontFamily">@font/open_sans</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

    </style>

    <style name="Theme.LPSimulation.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LPSimulation.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="Theme.LPSimulation.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>